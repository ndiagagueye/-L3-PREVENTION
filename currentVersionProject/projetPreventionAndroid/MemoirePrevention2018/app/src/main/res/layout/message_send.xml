<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="right"
    android:orientation="horizontal">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_message_send"
        android:orientation="vertical"
        android:minWidth="90dp"
        android:layout_marginTop="2dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:id="@+id/tv_content_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            style="@style/font_text_normal"
            android:textColor="@color/colorPrimaryDark"
            android:padding="1dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp">

            <ImageView
                android:id="@+id/iv_seen_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:src="@drawable/ic_seen_message"/>

            <ImageView
                android:id="@+id/iv_message_sent"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_message_send"/>


            <TextView
                android:id="@+id/tv_date_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="la date"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="right"
                style="@style/font_text_bold"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="10sp"
                />


        </LinearLayout>





    </LinearLayout>






</LinearLayout>